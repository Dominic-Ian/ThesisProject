<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaBHADbMauiApp.Pages.Client.AddPaymentPage"
             Title="AddPaymentPage">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Text="Payment Via GCash" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="10" FontSize="Large" Grid.Row="0" />
        <StackLayout  Padding="20" VerticalOptions="CenterAndExpand" Grid.Row="1">

            <Image x:Name="SelectedImage" 
                   HeightRequest="200" 
                   WidthRequest="200" 
                   Aspect="AspectFill"
                   IsVisible="False" />
        </StackLayout>
        
    </Grid>
</ContentPage>