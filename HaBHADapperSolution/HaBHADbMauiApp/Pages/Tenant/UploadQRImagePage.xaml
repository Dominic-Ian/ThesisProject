<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaBHADbMauiApp.Pages.Client.UploadQRImagePage"
             Title="UploadQRImagePage">

    <StackLayout  Padding="20" VerticalOptions="CenterAndExpand" Grid.Row="1">

        <Image x:Name="SelectedImage" 
               HeightRequest="200" 
               WidthRequest="200" 
               Aspect="AspectFill"
               IsVisible="False" />

        <Button Text="Upload Gcach QrCode"
                x:Name="OnPickImage"
                Clicked="OnPickImage_Clicked"
                VerticalOptions="CenterAndExpand" Margin="10" />

        <Button Text="Upload"
                x:Name="OnUploadImage"
                Clicked="OnUploadImage_Clicked"
                VerticalOptions="CenterAndExpand" Margin="10" />

        <Label x:Name="StatusMessage"
               TextColor="Red"
               FontSize="14"
               HorizontalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>