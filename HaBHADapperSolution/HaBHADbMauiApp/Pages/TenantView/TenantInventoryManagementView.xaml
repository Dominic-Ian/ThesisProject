<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaBHADbMauiApp.Pages.TenantView.TenantInventoryManagementView"
             Title="Tenant Inventory Management">
    <VerticalStackLayout Padding="20" Spacing="15">
        <ScrollView>
            <VerticalStackLayout Spacing="10">
                <Label Text="Room Number" FontSize="Medium" />
                <Entry x:Name="txtRoomNumber" Placeholder="Enter room number" />

                <Label Text="Room Size" FontSize="Medium" />
                <Entry x:Name="txtRoomSize" Placeholder="Enter room size" />

                <Label Text="Price Per Month" FontSize="Medium" />
                <Entry x:Name="txtPricePerMonth" Placeholder="Enter price per month" />

                <Label Text="Descriptions" FontSize="Medium" />
                <Entry x:Name="txtDescriptions" Placeholder="Enter descriptions" />

                <Button x:Name="btnAdd" Text="Save" Margin="0,20" Clicked="btnAdd_Clicked" BackgroundColor="Green" TextColor="White" />
                <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" BackgroundColor="Red" TextColor="White" />
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>

